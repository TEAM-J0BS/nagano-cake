<h3>商品一覧</h3>
<div class='container'>
  <div class='row'>
    <div class="col-md-3">
    </div>
    <div class="col-md-9">
      <% @items.each do |item| %>
      <%= link_to item_path(item) do  %>
      <%= image_tag item.image, size: "100x100" %>
      <% end %>
      <%= item.name %>
      <%= item.with_tax_price %>円
      <% end %>
    </div>
    </div>
    </div>