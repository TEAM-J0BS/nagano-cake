<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">ショッピングカート</h4>


      <div class="destroy_all">
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger btn-sm" %>
      </div>

      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.image, size:"100x100" %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price%></td>
            <td>
              <%= form_with model: cart_item do |f| %>
                <%= f.select :count, 1..10, prompt: "個数選択" %>
                <%= f.submit "変更", class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger btn-sm" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="d-flex">
        <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
        <div class="col-md-3">
          <table class="table">
            <tr>
              <th>合計金額</th>
              <td><%= @total %></td>
            </tr>
          </table>
        </div>
      </div>

    </div>
  </div>
</div>