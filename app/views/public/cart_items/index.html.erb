<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">ショッピングカート</h4>

      <% if @cart_items.any? %>
      <div class="text-right mb-4">
        <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger btn-sm" %>
      </div>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= image_tag cart_item.item.image, size:"50x50", class: "mr-5" %><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: cart_item do |f| %>
                <%= f.select :count, 1..10, prompt: "個数選択" %>
                <%= f.submit "変更", class: "btn btn-success btn-sm" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal.to_s(:delimited) %></td>
            <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger btn-sm" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="container">
        <div class="row">
          <div class="col-md-3">
            <%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
          </div>
          <div class="col-md-4 offset-5">
            <table class="table table-bordered">
              <tr>
                <th>合計金額</th>
                <td><%= @total.to_s(:delimited) %></td>
              </tr>
            </table>
          </div>
        </div>
      </div>
      <% else %>
        <p>カート内に商品がありません。</p>
      <% end %>

      <div class="row justify-content-center mt-5 mb-5">
        <% if @cart_items.any? %>
          <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success" %>
        <% else %>
          <p>情報入力に進むには、商品を追加してください。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>

