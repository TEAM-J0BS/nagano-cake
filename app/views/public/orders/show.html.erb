<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4 class="mt-5">注文履歴詳細</h4>
        <table class="table table-bordered">
          <tr>
            <td class="bg-light">注文日</td>
            <td><%= @order.created_at.strftime('%Y/%m/%d %H:%M:%S')  %></td>
          </tr>

          <tr>
            <td class="bg-light">配送先</td>
            <td><%= @order.address %></td>
          </tr>

          <tr>
            <td class="bg-light">支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>

          <tr>
            <td class="bg-light">ステータス</td>
            <td><%= @order.status_i18n %></td>
          </tr>
        </table>
    </div>
    <div class= "col-md-6">
      <h4 class="mt-5">請求情報</h4>
        <table class="table table-bordered">
          <tr>
            <td class="bg-light">商品合計</td>
            <td><%= (@order.total_amount - @order.shipping_fee).to_s(:delimited) %>円</td>
          </tr>

            <tr>
              <td class="bg-light">配送料</td>
              <td><%= @order.shipping_fee %>円</td>
            </tr>

            <tr>
              <td class="bg-light">ご請求額</td>
              <td><%= @order.total_amount.to_s(:delimited) %>円</td>
            </tr>
        </table>
    </div>
    <table class="table table-bordered">
      <h5 class="mt-3">注文内容</h5>
        <thead>
          <tr>
            <th class="bg-light">商品</th>
            <th class="bg-light">単価(税込)</th>
            <th class="bg-light">個数</th>
            <th class="bg-light">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.with_tax_price.to_s(:delimited) %>円</td>
            <td><%= order_detail.count %></td>
            <td><%= order_detail.total_price.to_s(:delimited) %>円</td>
          </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>