<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">注文履歴一覧</h4>
        <table class="table table-bordered">
            <thead>
              <tr>
                <th>注文日</th>
                <th>配送先</th>
                <th>注文商品</th>
                <th>支払金額</th>
                <th>ステータス</th>
                <th>注文商品詳細</th>
              </tr>
            </thead>
            <tbody>
             <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d %H:%M:%S')  %></td>
              <td><%= order.address %></td>
              <td>
                <% order.order_details.each do |order_detail| %>
                <%= order_detail.item.name %><br>
                <% end %>
              </td>
              <td><%= order.total_amount.to_s(:delimited) %>円</td>
              <td><%= order.status_i18n %></td>
              <td><%= link_to "表示する", order_path(order),class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %></td>
            </tr>
              <% end %>
            </tbody>
        </table>
    </div>
  </div>
</div>