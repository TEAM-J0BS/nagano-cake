<div class="container">
  <div class='row'>
    <div class="col">
      <h3 class="mt-5">商品一覧</h3>
        <div class="text-right">
          <%= link_to "+", new_admin_item_path, class: "btn btn-outline-dark btn-lg" %>
        </div>
      <div class="index">
      <table class='table'>
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <td><%= item.item_status %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
<div>
<%= paginate @items %>
