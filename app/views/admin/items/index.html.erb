<h3>商品一覧</h3>
<%= link_to "+", new_admin_item_path, class: "text-right btn btn-outline-dark btn-lg" %>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= item.name %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.item_status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>
