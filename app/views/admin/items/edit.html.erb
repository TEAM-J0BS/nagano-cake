<h3>商品編集</h3>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%= form_with model:[:admin, @item] do |f| %>

      <h4>商品画像</h4>
      <div class="form-group">
      <%= f.file_field :image, accept: "image/*" %>
      </div>

      <h4>商品名</h4>
      <div class="form-group">
      <%= f.text_field :name %>
      </div>

      <h4>商品説明</h4>
      <div class="form-group">
      <%= f.text_area :introduction %>
      </div>

      <h4>ジャンル</h4>
      <div class="form-group">
      <%= f.select :genre_id, @genres,include_blank: "選択して下さい" %>
      </div>

      <h4>税抜価格</h4>
      <div class="form-group">
      <%= f.text_field :price %>円
      </div>

      <h4>販売ステータス</h4>
      <div class="form-group">
      <%= f.radio_button :is_available, true %>
      <%= f.label :is_available, "販売中" %>

      <%= f.radio_button :is_available, false %>
      <%= f.label :is_available, "販売停止中" %>
      </div>

	    <div class="form-group">
      <div><%= f.submit '変更を保存', class: "btn btn-success" %></div>
      </div>
      <% end %>
    </div>
  </div>
</div>