<h3>商品新規登録</h3>
<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

      <%= form_with model:[:admin, @item] do |f| %>

      <h4>商品画像</h4>
      <%= f.file_field :image, accept: "image/*" %>

      <h4>商品名</h4>
      <%= f.text_field :name %>
	
      <h4>商品説明</h4>
      <%= f.text_area :introduction %>

      <h4>ジャンル</h4>
      <%= f.select :genre_id, [["ケーキ", "ケーキ"], ["焼き菓子", "焼き菓子"], ["プリン", "プリン"], ["キャンディー", "キャンディー"]], include_blank: "選択して下さい" %>

      <h4>税抜価格</h4>
      <%= f.text_field :price %>円

      <h4>販売ステータス</h4>
      <%= f.radio_button :is_available, true %>
      <%= f.label :is_available, "販売中" %>

      <%= f.radio_button :is_available, false %>
      <%= f.label :is_available, "販売停止中" %>
	
      <div><%= f.submit '新規登録', class: "btn btn-success" %></div>
      <% end %>
    </div>
  </div>
</div>