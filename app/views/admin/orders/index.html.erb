<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">注文履歴一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
              <% end %>
            </td>
            <td><%= order.customer.full_name %></td>
            <td><%= order.order_details.sum(:count) %></td>
            <td><%= order.status_i18n %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="pagenation">
        <%= paginate @orders %>
      </div>
    </div>
  </div>
</div>